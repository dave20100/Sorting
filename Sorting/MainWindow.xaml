<Window x:Class="Sorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sorting"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Sorting" Height="619" Width="1000">
    <Grid Background="#FF384C5D">
        <Button Content="Sort" Margin="10,539,772,10" Click="Button_Click"/>
        <Canvas Margin="10,10,10,102" Name="canvas" Background="White"/>
        <ComboBox Margin="745,539,10,13" SelectionChanged="ComboBox_SelectionChanged" Name="algorithmsComboBox">
            <ComboBoxItem>Bubble</ComboBoxItem>
            <ComboBoxItem>Insertion</ComboBoxItem>
            <ComboBoxItem>Bogo</ComboBoxItem>
        </ComboBox>
        <TextBlock x:Name="StatsBox" TextAlignment="Center" HorizontalAlignment="Left" Margin="520,548,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="125" FontSize="17"/>
        <TextBox HorizontalAlignment="Left" TextAlignment="Center" Margin="294,548,0,13" Text="10" TextWrapping="Wrap" Width="139" Name="ElementNumberTextBox"/>

    </Grid>
</Window>
